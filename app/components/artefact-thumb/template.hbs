<form {{action "save" on="submit"}}>
  <div class="artefact-thumb__img-container">
    {{#if artefact.file}}
      {{file-preview
        file=artefact.file
        class="artefact-thumb__img"}}
    {{else if artefact.url}}
      <img src="{{artefact.url}}" class="artefact-thumb__img">
    {{/if}}
  </div>

  <div class="artefact-thumb__meta">
    {{#if artefact.file}}
      <em>Uploadingâ€¦</em>
    {{else}}
      <div>
        <label>Date</label>
        {{pikaday-input
          value=artefact.createdAt
          format="MM/DD/YYYY"}}
      </div>

      <div>
        <label>Tag</label>
        {{input type="text" value=artefact.tag}}
      </div>
    {{/if}}
  </div>

  {{#if artefact.hasDirtyAttributes}}
    <button type="submit">Save</button>
    <button {{action "rollback"}}>Reset</button>
  {{/if}}
  <button {{action "view"}}>View</button>
  <button {{action "remove"}}>Remove</button>
</form>
